<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <h3 class="error-header"><%= pluralize(@activity.errors.count, "error") %> occurred!</h3>

    <ul class="error-list">
      <% @activity.errors.full_messages.each do |msg| %>
        <li class="error-msg"><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <!-- <div class="field">
    <%= f.label :prize, "Prize ($)", class:"field-label" %>
    <%= f.number_field :prize, class:"field-input", step: 0.01 %>
  </div> -->

  <div class="field">
    <%= f.label :name, "Name of Exercise", class:"field-label" %>
    <%= f.text_field :name, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :new_hire_description, "Description", class:"field-label" %>
    <%= f.text_area :new_hire_description, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_one, "1)", class:"field-label" %>
    <%= f.text_field :task_one, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_two, "2)", class:"field-label" %>
    <%= f.text_field :task_two, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_three, "3)", class:"field-label" %>
    <%= f.text_field :task_three, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_four, "4)", class:"field-label" %>
    <%= f.text_field :task_four, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_five, "5)", class:"field-label" %>
    <%= f.text_field :task_five, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_six, "6)", class:"field-label" %>
    <%= f.text_field :task_six, class:"field-input" %>
  </div><br />

  <%= f.submit "SUBMIT", class:"submit", id:"green" %>

  <%= link_to "BACK", "/activities", class:"submit", id:"green" %>

<% end %>
