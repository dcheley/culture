<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <h3 class="error-header"><%= pluralize(@activity.errors.count, "error") %> occurred!</h3>

    <ul class="error-list">
      <% @activity.errors.full_messages.each do |msg| %>
        <li class="error-msg"><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <!-- <div class="field">
    <%= f.label :prize, "Prize ($)", class:"field-label" %>
    <%= f.number_field :prize, class:"field-input", step: 0.01 %>
  </div> -->

  <div class="field">
    <%= f.label :name, "Name of Exercise", class:"field-label" %>
    <%= f.text_field :name, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :description, class:"field-label" %>
    <%= f.text_area :description, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_one, "Question 1", class:"field-label" %>
    <%= f.text_field :task_one, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_two, "Question 2", class:"field-label" %>
    <%= f.text_field :task_two, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_three, "Question 3", class:"field-label" %>
    <%= f.text_field :task_three, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_four, "Question 4", class:"field-label" %>
    <%= f.text_field :task_four, class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :task_five, "Question 5", class:"field-label" %>
    <%= f.text_field :task_five, class:"field-input" %>
  </div><br />

  <% if current_page?(action: "new_assignment") %>
    <%= f.fields_for :trackers_attributes do |a| %>
      <%= a.hidden_field :user_email, value: current_user.new_hire_email %>
      <%= a.hidden_field :status, value: nil %>

      <%= a.label :contact, class:"field-input" %>
      <%= a.text_field :contact, placeholder:"example@email.com", class:"field-input" %>

      <%= a.label :due_date, "Due Date", class:"field-label" %>
      <%= a.datetime_select :due_date, class:"field-input" %>
    <% end %>
  <% end %><br />

  <%= f.submit "SUBMIT", class:"submit", id:"green" %>

  <%= link_to "BACK", "/activities", class:"submit", id:"green" %>

<% end %>
