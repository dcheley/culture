<h1 class="home-header"><%= @activity.name %></h1>

<p class="home-text"><%= @activity.description %></p>

<p class="home-text"><b>Goal 1:</b> <%= @activity.task_one %></p>
<p class="home-text"><b>Goal 2:</b> <%= @activity.task_two %></p>
<p class="home-text"><b>Goal 3:</b> <%= @activity.task_three %></p>
<p class="home-text"><b>Goal 4:</b> <%= @activity.task_four %></p>
<p class="home-text"><b>Goal 5:</b> <%= @activity.task_five %></p>

<h1 class="home-header">What are some of your key takeaways from this task?</h1>

<%= form_for([@activity, @feedback]) do |f| %>
  <% if @feedback.errors.any? %>
    <h2 class="error-header"><%= pluralize(@feedback.errors.count, "error") %> occurred!</h2>

    <ul class="error-list">
      <% @feedback.errors.full_messages.each do |msg| %>
        <li class="error-msg"><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <div class="field">
    <%= f.label :first_takeaway, class:"field-label" %>
    <%= f.text_field :first_takeaway, class:"field-input" %>
  </div><br />

  <div class="field">
    <%= f.label :second_takeaway, class:"field-label" %>
    <%= f.text_field :second_takeaway, class:"field-input" %>
  </div><br />

  <div class="field">
    <%= f.label :third_takeaway, class:"field-label" %>
    <%= f.text_field :third_takeaway, class:"field-input" %>
  </div><br />

  <div class="field">
    <%= f.label :fourth_takeaway, class:"field-label" %>
    <%= f.text_field :fourth_takeaway, class:"field-input" %>
  </div><br />

  <div class="field">
    <%= f.label :fifth_takeaway, class:"field-label" %>
    <%= f.text_field :fifth_takeaway, class:"field-input" %>
  </div><br />

  <!-- <%= fields_for :activity, @activity do |u| %>
    <%= u.hidden_field :feedback_id, value: @feedback.id %>
  <% end %> -->

  <%= f.submit "SEND FEEDBACK", class:"submit", id:"blue" %>
<% end %>

<% if @activity.status != 1 %>
  <%= form_for(@activity) do |f| %>
    <%= f.hidden_field :status, value: 1 %>
    <%= f.submit 'MARK COMPLETE', class:"submit", id:"blue" %>
  <% end %>
<% else %>
  <%= form_for(@activity) do |f| %>
    <%= f.hidden_field :status, value: nil %>
    <%= f.submit 'MARK INCOMPLETE', class:"submit", id:"red" %>
  <% end %>
<% end %>
