<h4 class="home-header">Name of employee you would like to assign this activity to <div class="green-text"><%= "#{@new_hire.name}" %></div></h4>

<div class="container">
  <div class="block-wrap">
    <h4 class="home-header"><%= @activity.name %> Details</h4>

    <p class="home-text" id="paragraph"><%= @activity.admin_description %></p>
  </div>
</div>

<div class="half-screen">
  <div class="block-wrap" id="tracker-edit">
    <p class="home-text"><b>Onboarding Tasks:</b></p>
    <p class="home-text"><b>1)</b> <%= @activity.task_one %></p>
    <p class="home-text"><b>2)</b> <%= @activity.task_two %></p>
    <p class="home-text"><b>3)</b> <%= @activity.task_three %></p>
    <p class="home-text"><b>4)</b> <%= @activity.task_four %></p>
    <p class="home-text"><b>5)</b> <%= @activity.task_five %></p>
    <p class="home-text"><b>6)</b> <%= @activity.task_six %></p>
  </div>
</div>

<%= form_for(@tracker) do |f| %>
  <div class="half-screen">
    <div class="block-wrap" id="tracker-edit">
      <% if @tracker.errors.any? %>
        <h3 class="error-header"><%= pluralize(@tracker.errors.count, "error") %> occurred!</h3>

        <ul class="error-list">
          <% @tracker.errors.full_messages.each do |msg| %>
            <li class="error-msg"><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <%= f.hidden_field :user_email, value: current_user.new_hire_email %>
      <%= f.hidden_field :activity_id, value: @activity.id %>

      <p class="home-text"><b>Additional tasks:</b></p>

      <div class="field">
        <%= f.label :question_one, "1)", class:"field-label" %>
        <%= f.text_field :question_one, placeholder:"#{@tracker.question_one}", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :question_two, "2)", class:"field-label" %>
        <%= f.text_field :question_two, placeholder:"#{@tracker.question_two}", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :question_three, "3)", class:"field-label" %>
        <%= f.text_field :question_three, placeholder:"#{@tracker.question_three}", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :question_four, "4)", class:"field-label" %>
        <%= f.text_field :question_four, placeholder:"#{@tracker.question_four}", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :question_five, "5)", class:"field-label" %>
        <%= f.text_field :question_five, placeholder:"#{@tracker.question_five}", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :question_six, "6)", class:"field-label" %>
        <%= f.text_field :question_six, placeholder:"#{@tracker.question_six}", class:"field-input" %>
      </div>
   </div>
  </div>

    <div class="container" style="clear: both;">
      <p class="home-text"><b>Email instructions to:</b></p>

      <div class="field">
        <%= f.text_field :contact_one, placeholder:"example@email.com", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.text_field :contact_two, placeholder:"example@email.com", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.text_field :contact_three, placeholder:"example2@email.com", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.text_field :contact_four, placeholder:"example3@email.com", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.text_field :contact_five, placeholder:"example4@email.com", class:"field-input" %>
      </div>

      <div class="field">
        <%= f.label :due_date, "Due Date", class:"field-label" %>
        <%= f.datetime_select :due_date, class:"field-input" %>
      </div>

      <%= f.submit "ASSIGN", class:"submit", id:"green" %>

      <%= link_to "BACK", home_url, class:"submit", id:"green" %>
    </div>
  <% end %>
