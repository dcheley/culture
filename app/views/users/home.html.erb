<!-- Admin User View -->
<% if current_user.admin == 1 %>
<h3 class="home-header">Register a New Hire</h3>

  <div class="form-container">
    <%= form_for(@user, url: :register_employee) do |f| %>
      <% if @user.errors.any? %>
        <h3 class="error-header"><%= pluralize(@user.errors.count, "error") %> occurred!</h3>

        <ul class="error-list">
          <% @user.errors.full_messages.each do |msg| %>
            <li class="error-msg"><%= msg %></li>
          <% end %>
        </ul>

      <% end %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <%= f.hidden_field :password, value: '123456' %>
      <%= f.hidden_field :password_confirmation, value: '123456' %>

      <div class="actions" style="margin-top: 10px;">
        <%= f.submit "Register New Hire", class:"submit", id:"blue" %>
      </div><br />
    <% end %>
  </div>

  <p class="home-header">OR</p>

  <h3 class="home-header">Assign activities to an existing employee</h3>

  <% @users.each do |u| %>
    <%= form_for(current_user, url: :select_employee) do |f| %>
      <%= f.hidden_field :new_hire_email, value: u.email %>
      <%= f.submit "#{u.email}", class:"link", id:"submit-link" %>
    <% end %>
  <% end %>

<!-- Normal User View -->
<% else %>
  <h1 class="home-title">Welcome to the Organization</h1>

  <p class="welcome-text">This is Shape, your employee integration application!</p>

  <p class="welcome-text">
    The app will provide you with integration activities so that  gain a deeper
    understanding of your workplace's culture and its employees.
  </p>

  <p class="welcome-text">
    In order to being learning about the common set of values, norms and behaviours
    of your workplace, click the "Get Started" button below.
  </p>

  <div class="link-wrap">
    <%= link_to "Get Started", user_url(current_user), class:"submit", id:"blue" %>
  </div>
<% end %>
