<h1 class="home-title">Welcome</h1>

<div class="third">
  <p class="home-header">Activities Completed</p>
    <% @activities.where(status: 1).each do |c| %>
      <li class="activity-items"><%= link_to c.name, "/activities/#{c.id}", class:"link" %> <%= "($#{c.prize})"%></li>
    <% end %>
</div>

<div class="third">
  <p class="home-header">Gift Card $$$ Awarded</p>
  <b><%= @reward.name %>:</b> <%= @reward.award %>
</div>

<div class="third">
  <p class="home-header">Activities to be Completed</p>
  <% @activities.where(status: nil).each do |a| %>
    <li class="activity-items"><%= link_to a.name, "/activities/#{a.id}", class:"link" %></li>
  <% end %>
</div>
