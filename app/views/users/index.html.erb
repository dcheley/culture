<!-- Admin User View -->
<% if current_user.admin == 1 %>
  <h3 class="progress-text">Current Progress</h3>

  <% @users.where(admin: nil).each do |u| %>
    <div class="progress-wrap">
      <p class=""><b><%= u.email %>'s</b> progress:</p>
      <!-- Display all of User's completed Activities as Dropdowns-->
      <% u.activities.where(status: 1).each do |a| %>
        <div class="dropdown">
          <div style="display: inline;">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdown1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <div class="submit" id="blue"><p class="details"><%= a.name %></p></div>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdown1">
              <p class="progress-text">Feedback given:</p>
              <!-- Display feedback for current iteration of Activity -->
              <% if a.feedback != nil %>
                <p class="details">1) <%= a.feedback.first_takeaway %></p>
                <p class="details">2) <%= a.feedback.second_takeaway %></p>
                <p class="details">3) <%= a.feedback.third_takeaway %></p>
                <p class="details">4) <%= a.feedback.fourth_takeaway %></p>
                <p class="details">5) <%= a.feedback.fifth_takeaway %></p>
              <% end %>
            </ul>
          </div>
          <p class="status">COMPLETE</p>
        </div>
      <% end %>
      <!-- Display all of User's incomplete Activities as Dropdowns-->
      <% u.activities.where(status: nil).each do |a| %>
        <div class="dropdown">
          <div style="display: inline;">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdown1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <div class="submit" id="blue"><p class="details"><%= a.name %></p></div>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdown1">
              <p class="progress-text">Feedback given:</p>
              <!-- Display feedback for current iteration of Activity -->
              <% if a.feedback != nil %>
                <p class="details">1) <%= a.feedback.first_takeaway %></p>
                <p class="details">2) <%= a.feedback.second_takeaway %></p>
                <p class="details">3) <%= a.feedback.third_takeaway %></p>
                <p class="details">4) <%= a.feedback.fourth_takeaway %></p>
                <p class="details">5) <%= a.feedback.fifth_takeaway %></p>
              <% end %>
            </ul>
          </div>
          <p class="status">INCOMPLETE</p>
        </div>
      <% end %>
    </div>
  <% end %>

<!-- Normal User View -->
<% else %>
  <h1 class="home-title">Welcome to the Organization</h1>

  <p class="welcome-text">This is Shape, your employee integration application!</p>

  <p class="welcome-text">
    The app will provide you with integration activities so that  gain a deeper
    understanding of your workplace's culture and its employees.
  </p>

  <p class="welcome-text">
    In order to being learning about the common set of values, norms and behaviours
    of your workplace, click the "Get Started" button below.
  </p>

  <div class="link-wrap">
    <!-- Using create button because of potential Gift Card feature -->
    <% if current_user.reward == nil %>
      <%= button_to "Get Started", {controller: :rewards, action: :create,
          reward: { name: "Progress", user_id: current_user.id, award: 0 }},
          class:"submit", id:"blue" %><br />
    <% else %>
      <%= link_to "Get Started", user_url(current_user), class:"submit", id:"blue" %>
    <% end %>
  </div>
<% end %>
