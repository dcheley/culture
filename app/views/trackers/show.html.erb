<%= render 'activity-details' %>

<h3 class="home-header">Answer below:</h3>

<%= form_for([@tracker, @feedback]) do |f| %>
  <div class="field">
    <%= f.label :first_takeaway, "First Answer", class:"field-label" %>
    <%= f.text_field :first_takeaway, class:"field-input" %>
    <% if @feedback.first_takeaway.present? %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>
  </div><br />

  <div class="field">
    <%= f.label :second_takeaway, "Second Answer", class:"field-label" %>
    <%= f.text_field :second_takeaway, class:"field-input" %>
    <% if @feedback.second_takeaway.present? %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>
  </div><br />

  <div class="field">
    <%= f.label :third_takeaway, "Third Answer", class:"field-label" %>
    <%= f.text_field :third_takeaway, class:"field-input" %>
    <% if @feedback.third_takeaway.present? %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>
  </div><br />

  <div class="field">
    <%= f.label :fourth_takeaway, "Fourth Answer", class:"field-label" %>
    <%= f.text_field :fourth_takeaway, class:"field-input" %>
    <% if @feedback.fourth_takeaway.present? %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>
  </div><br />

  <div class="field">
    <%= f.label :fifth_takeaway, "Fifth Answer" ,class:"field-label" %>
    <%= f.text_field :fifth_takeaway, class:"field-input" %>
    <% if @feedback.fifth_takeaway.present? %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>
  </div><br />

  <%= f.submit "SAVE ANSWERS", class:"submit", id:"green" %>

  <%= link_to "BACK", user_url(current_user), class:"submit", id:"green" %>
<% end %>

<% if @tracker.status != 1 %>
  <%= form_for(@tracker) do |f| %>
    <%= f.hidden_field :status, value: 1 %>
    <%= f.submit "MARK COMPLETE (DON'T FORGET TO SAVE ANSWERS FIRST)", class:"submit", id:"blue" %>
  <% end %>
<% else %>
  <%= form_for(@tracker) do |f| %>
    <%= f.hidden_field :status, value: nil %>
    <%= f.submit 'MARK INCOMPLETE', class:"submit", id:"red" %>
  <% end %>
<% end %>
