<%= form_for(@tracker) do |f| %>
  <% if @tracker.errors.any? %>
    <h3 class="error-header"><%= pluralize(@tracker.errors.count, "error") %> occurred!</h3>

    <ul class="error-list">
      <% @tracker.errors.full_messages.each do |msg| %>
        <li class="error-msg"><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <h4 class="field">
    <%= f.label :user_email, "Assign this activity to", class:"field-label" %>
    <label class="green-text"><%= current_user.new_hire_email + "?" %></label>
  </h4>

  <%= f.hidden_field :user_email, value: current_user.new_hire_email %>

  <%= f.hidden_field :activity_id, value: @tracker.activity.id %>

  <div class="field">
    <%= f.label :question_one, "1)", class:"field-label" %>
    <%= f.text_field :question_one, placeholder:"#{@tracker.question_one}", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :question_two, "2)", class:"field-label" %>
    <%= f.text_field :question_two, placeholder:"#{@tracker.question_two}", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :question_three, "3)", class:"field-label" %>
    <%= f.text_field :question_three, placeholder:"#{@tracker.question_three}", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :question_four, "4)", class:"field-label" %>
    <%= f.text_field :question_four, placeholder:"#{@tracker.question_four}", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :question_five, "5", class:"field-label" %>
    <%= f.text_field :question_five, placeholder:"#{@tracker.question_five}", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :contact, "Employee Contact", class:"field-label" %>
    <%= f.text_field :contact, placeholder:"example@email.com", class:"field-input" %>
  </div>

  <div class="field">
    <%= f.label :due_date, "Due Date", class:"field-label" %>
    <%= f.datetime_select :due_date, class:"field-input" %>
  </div>

  <%= f.submit "ASSIGN", class:"submit", id:"green" %>

  <%= link_to "BACK", home_url, class:"submit", id:"green" %>

<% end %>
