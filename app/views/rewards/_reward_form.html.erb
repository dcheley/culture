<%= form_for(@reward) do |f| %>
  <% if @reward.errors.any? %>
    <h2 class="error-header"><%= pluralize(@reward.errors.count, "error") %> occurred!</h2>

    <ul class="error-list">
      <% @reward.errors.full_messages.each do |msg| %>
        <li class="error-msg"><%= msg %></li>
      <% end %>
    </ul>

  <% end %>

  <div class="field">
    <%= f.label :name, class:"field-label" %>
    <%= f.text_field :name, class:"field-input" %>
  </div><br />

  <%= f.hidden_field :user_id, value: nil %>
  <%= f.submit "SUBMIT", class:"submit", id:"blue" %>

  <%= link_to "BACK", "/rewards", class:"submit", id:"blue" %>

<% end %>
